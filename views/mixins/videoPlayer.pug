mixin videoPlayer(video)
  video(src=`/${video.fileUrl}` autoplay)
  .video__controls
    .video__controls--column
      span
        i.fas.fa-volume-up
      span
        |00:00/10:00
    .video__controls--column
      span
        i.fas.fa-play
    .video__controls--column
      span
        i.fas.fa-expand