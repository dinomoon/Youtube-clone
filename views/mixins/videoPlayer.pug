mixin videoPlayer(video)
  video(src=`/${video.fileUrl}`)
  .video__controls
    .video__controls--column
      .volume
        span#volume-btn
          i.fas.fa-volume-down
        input.volume-range(type="range", min="0" max="1" value="0.5" step="0.1")
      span
        span#current-time 00:00:00
        span#total-time 00:00:00
    .video__controls--column
      span#play-btn
        i.fas.fa-play
    .video__controls--column
      span#fullscreen-btn
        i.fas.fa-expand