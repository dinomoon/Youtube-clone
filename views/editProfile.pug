extends layouts/main

block content
  .form__container
    h2.form__title Edit Profile
    form.form(action=routes.editProfile, method="POST")
      label.label(for="avatar") Avatar
      input.input(type="file", id="avatar", name="avatar")
      label.label(for="name") name
      input.input(type="text", id="name", value=user.name)
      label.label(for="email") email
      input.input(type="email", id="email", value=user.email)
      button.submit__btn(type="submit") Update profile
    a.change__btn(href=routes.changePassword(user.id)) Change password
